<div class="modal-dialog modal-md">
  <div class="modal-content">
    <div class="modal-header">
      <button class="close" data-dismiss="modal">X</button>
      <h1><%= @bookmark.url.match(/^(?:https?:\/\/)?(?:[^@\n]+@)?(?:www\.)?([^:\/\n]+)/im)[1] %></h1>
    </div>
    <div class="form-horizontal">
      <div class="modal-body">
        <div class="form-group">
          <h4 class="col-sm-3 control-label">Url:</h4>
          <div class="col-sm-8">
            <p class='form-control'><%= @bookmark.url %></p>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="form-group col-sm-5 control-label">
          <%= link_to "Edit", edit_topic_bookmark_path(@bookmark.topic, @bookmark), class: "btn btn-primary #{edit_disabled}", remote: true %>
        </div>
        <div class="form-group col-sm-4 control-label">
          <%= link_to "Delete", topic_bookmark_path(@bookmark.topic, @bookmark), method: :delete, data: {confirm: 'Are you sure you want to delete this bookmark?'}, class: "btn btn-danger #{edit_disabled}" %>
        </div>
      </div>
    </div>
  </div>
</div>
