<div class="form-horizontal">
  <%= form_for(@bookmark, url: url) do |f| %>
  <div class="modal-body">
    <div class="form-group">
      <%= f.label :url, class: 'col-sm-3 control-label' %>
      <div class="col-sm-8">
        <%= f.url_field :url, class: 'form-control', placeholder: "Enter topic title" %>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <div class="form-group col-sm-5 control-label">
      <%= f.submit "OK", class: 'btn btn-default' %>
    </div>
    <div class="form-group col-sm-4 control-label">
      <button class="btn btn-danger" data-dismiss="modal">Cancel</button>
    </div>
  </div>
  <% end %>
</div>
