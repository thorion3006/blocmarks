<div class="modal-dialog modal-lg">
  <div class="modal-content">

    <div class="modal-header">
      <button class="close" data-dismiss="modal">X</button>
      <h1>Sign Up</h1>
    </div>
    <div class="form-horizontal">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
      <div class="modal-body">
        <div class="form-group">
          <%= f.label :uname, 'User Name', class: "col-sm-4 control-label" %>
          <div class="col-sm-6">
            <%= f.text_field :uname, class: 'form-control', autofocus: true %>
          </div>
        </div>

        <div class="col-xs-12"></div> <!-- for space between forms -->

        <div class="form-group">
          <%= f.label :name, 'Full Name', class: "col-sm-4 control-label" %>
          <div class="col-sm-6">
            <%= f.text_field :name, class: 'form-control' %>
          </div>
        </div>

        <div class="col-xs-12"></div> <!-- for space between forms -->

        <div class="form-group">
          <%= f.label :email, class: "col-sm-4 control-label" %>
          <div class="col-sm-6">
            <%= f.email_field :email, class: 'form-control' %>
          </div>
        </div>

        <div class="col-xs-12"></div> <!-- for space between forms -->

        <div class="form-group">
          <%= f.label :password, class: "col-sm-4 control-label" %>
          <div class="col-sm-6">
            <%= f.password_field :password, class: 'form-control', autocomplete: "off", placeholder: "#{@minimum_password_length} characters minimum"  %>
          </div>
        </div>

        <div class="col-xs-12"></div> <!-- for space between forms -->

        <div class="form-group">
          <%= f.label :password_confirmation, class: "col-sm-4 control-label" %>
          <div class="col-sm-6">
            <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
          </div>
        </div>

        <div class="col-xs-12"></div> <!-- for space between forms -->

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.label :remember_me, 'Remember me?', class: "col-sm-4 control-label" %>
            <div class="col-sm-6">
              <%= f.check_box :remember_me %>
            </div>
          </div>
        <% end -%>
      </div>

      <div class="modal-footer">
        <div class="form-group col-sm-8 control-label">
          <%= f.submit "Sign up", class: 'btn btn-lg btn-default' %>

        <% end %> <!-- end of form -->

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
