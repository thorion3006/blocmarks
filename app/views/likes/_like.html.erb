<% if bookmark.user == current_user %>
  <%= link_to "Delete", topic_bookmark_path(bookmark.topic, bookmark), method: :delete, data: {confirm: 'Are you sure you want to delete this bookmark?'}, class: "btn btn-danger center-btn" %>
<% else %>
  <% if policy(Like.new).create? %>
    <div>
      <% if like = current_user.liked(bookmark) %>
        <%= link_to [bookmark, like], class: 'btn btn-danger center-btn', method: :delete do %>
          <i class="glyphicon glyphicon-star-empty"> </i>&nbsp; Unlike
        <% end %>
      <% else %>
        <%= link_to [bookmark, Like.new], class: 'btn btn-primary center-btn', method: :post do %>
          <i class="glyphicon glyphicon-star"> </i>&nbsp; Like
        <% end %>
      <% end %>
    </div>
  <% end %>
<% end %>
