<!DOCTYPE html>
<html>
  <head>
    <title>Blocmarks</title>
    <%= csrf_meta_tags %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Kaushan+Script" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Trade+Winds" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Akronim" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="container-fluid">
    <nav>
      <li class="logo">
        <%= link_to 'Blocmarks', root_path %>
      </li>
      <div class="pull-right nav nav-pills">
        <% if Rails.env.development? %>
          <li class="<%= active_class(letter_opener_web_path) %>"><%= link_to 'Mail', letter_opener_web_path, target: :_blank %></li>
        <% end %>
        <li><a href="#">Bookmarks</a></li>
        <% if user_signed_in? %>
          <li class="<%= active_class(new_user_registration_path) %>"><%= link_to 'Sign Up', new_user_registration_path %></li>
          <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li class="<%= active_class(new_user_registration_path) %>"><%= link_to 'Sign Up', new_user_registration_path, remote: true %></li>
          <li class="<%= active_class(new_user_session_path) %>"><%= link_to 'Sign In', new_user_session_path %></li>
        <% end %>
      </div>
    </nav>

    <% if flash[:notice].present? %>
      <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= flash[:notice] %>
      </div>
    <% elsif flash[:alert].present? %>
      <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= flash[:alert] %>
      </div>
    <% end %>

    <div id="modal" class="modal modal-transparent fade"></div>

    <%= yield %>

  </body>
</html>
